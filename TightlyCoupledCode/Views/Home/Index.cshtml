@using DAL
@{
    ViewData["Title"] = "Home Page";
}

<h1>Featured Products</h1

<div
@{
    var products = (IEnumerable<Product>)this.ViewData["Products"];

    foreach (var product in products)
    {
        <div>
            <h2>@product.Name</h2>
            <p>@product.Description</p>
            <p>Price: @product.UnitPrice.ToString("C")</p>
        </div>
    }
    }
    </div>